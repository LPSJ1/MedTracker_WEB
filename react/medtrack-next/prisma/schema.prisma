generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user_table {
  id           Int          @id @default(autoincrement())
  first_name   String
  last_name    String
  email        String       @unique
  phone_number String
  password     String
  medications  Medication[]
}

model Medication {
  id           Int        @id @default(autoincrement())
  name         String
  dosage       String
  frequency    String
  time         String
  instructions String?
  userId       Int
  user         user_table @relation(fields: [userId], references: [id])
}
